<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  <link rel="stylesheet" href="public/css/index.css">
</head>

<body class="grid-container">

  <%- include ('./partials/homeSidebar.ejs', {
      activePage: activePage,
      fullname: fullname,
      thumbnailLetter: thumbnailLetter,
    }) %>
  
  <main>
    <%- include ('./partials/searchBar.ejs') %>

    <% if (isSearch) { %>
      <div class="container">
        <div class="d-flex flex-wrap">
          <% if (searchedFiles.length !== 0) { %> 
            <% searchedFiles.forEach((file) => { %>
              <div style="width: 24%; margin: 0 0.5em 0 0">
                <%- include ('./partials/file.ejs', { file: file }) %>
              </div>
            <% }) %>
          <% } else { %> 
            <p>No Files Found</p>
          <% } %>
        </div>
      </div>
    <% } else { %>
      <div class="container">
        <h4>Store Details</h4>
        <div class="d-flex flex-wrap">
          <% if (storeDetailFiles.length !== 0) { %> 
            <% storeDetailFiles.forEach((file) => { %>
              <div style="width: 24%; margin: 0 0.5em 0 0">
                <%- include ('./partials/file.ejs', { file: file }) %>
              </div>
            <% }) %>
          <% } else { %> 
            <p>No Files</p>
          <% } %>
        </div>
      </div>

      <div class="container my-5">
        <h4>Accounts</h4>
        <div class="d-flex flex-wrap">
          <% if (accountFiles.length !== 0) { %> 
            <% accountFiles.forEach((file) => { %>
              <div style="width: 24%; margin: 0 0.5em 0 0">
                <%- include ('./partials/file.ejs', { file: file }) %>
              </div>
            <% }) %>
          <% } else { %> 
            <p>No Files</p>
          <% } %>
        </div>
      </div>

      <div class="container">
        <h4>Inventory</h4>
        <div class="d-flex flex-wrap">
          <% if (inventoryFiles.length !== 0) { %> 
            <% inventoryFiles.forEach((file) => { %>
              <div style="width: 24%; margin: 0 0.5em 0 0">
                <%- include ('./partials/file.ejs', { file: file }) %>
              </div>
            <% }) %>
          <% } else { %> 
            <p>No Files</p>
          <% } %>
        </div>
      </div>

      <div class="container my-5">
        <h4>Transactions</h4>
        <div class="d-flex flex-wrap">
          <% if (transactionFiles.length !== 0) { %> 
            <% transactionFiles.forEach((file) => { %>
              <div style="width: 24%; margin: 0 0.5em 0 0">
                <%- include ('./partials/file.ejs', { file: file }) %>
              </div>
            <% }) %>
          <% } else { %> 
            <p>No Files</p>
          <% } %>
        </div>
      </div>

      <div class="container">
        <h4>Attendance</h4>
        <div class="d-flex flex-wrap">
          <% if (attendanceFiles.length !== 0) { %> 
            <% attendanceFiles.forEach((file) => { %>
              <div style="width: 24%; margin: 0 0.5em 0 0">
                <%- include ('./partials/file.ejs', { file: file }) %>
              </div>
            <% }) %>
          <% } else { %> 
            <p>No Files</p>
          <% } %>
        </div>
      </div>

      <div class="container my-5">
        <h4>Expiration Date</h4>
        <div class="d-flex flex-wrap">
          <% if (expirationDateFiles.length !== 0) { %> 
            <% expirationDateFiles.forEach((file) => { %>
              <div style="width: 24%; margin: 0 0.5em 0 0">
                <%- include ('./partials/file.ejs', { file: file }) %>
              </div>
            <% }) %>
          <% } else { %> 
            <p>No Files</p>
          <% } %>
        </div>
      </div>

      <div class="container">
        <h4>Others</h4>
        <div class="d-flex flex-wrap">
          <% if (otherFiles.length !== 0) { %> 
            <% otherFiles.forEach((file) => { %>
              <div style="width: 24%; margin: 0 0.5em 0 0">
                <%- include ('./partials/file.ejs', { file: file }) %>
              </div>
            <% }) %>
          <% } else { %> 
            <p>No Files</p>
          <% } %>
        </div>
      </div>


    <% } %>

  </main>

  <%- include ('./partials/defaultsSidebar.ejs', { defaultFiles: defaultFiles }) %>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>