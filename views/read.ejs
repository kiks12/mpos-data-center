
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  <link rel="stylesheet" href="/public/css/index.css">
</head>

<body class="grid-container-2">

  <div class="modal-container" id="modal">
    <div class="modal-card" id="modalCard">
      <div class="modal-title">
        <h3>Message</h3>
        <button id="closeModalBtn" class="btn btn-light text-danger h-100 border">close</button>
      </div>
      <div class="modal-content">
        <small id="message">adslfhskdfhs</small>
      </div>
    </div>
  </div>

  <%- include ('./partials/homeSidebar.ejs', {
      activePage: activePage,
      fullname: fullname,
      thumbnailLetter: thumbnailLetter,
    }) %>
  
  <main>
    <%- include ('./partials/searchBar.ejs') %>

    <%- include ('./partials/readControlPanel.ejs', 
        { 
          type: type,
          path: path,
          filename: filename,
        }
      ) 
    %>

    <div class="w-100 px-3 py-2">
      <table class="table table-striped">
        <% csv.forEach((row, idx) => { %>
          <% if (idx == 0) { %>
            <thead class="table-dark">
              <tr>
                <% row.forEach((col) => { %>
                  <th class="col text-center">
                    <small>
                      <%= col.toUpperCase() %>
                    </small>
                  </th>
                <% }) %>
              </tr>
            </thead>
          <% } else { %>
            <tr>
              <% row.forEach((col) => { %>
                <td class="col text-center">
                  <small>
                    <%= col %>
                  </small>
                </td>
              <% }) %> 
            </tr>
          <% } %> 
        <% }) %>
      </table>
    </div>

  </main>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

  <script src="public/js/read.js"></script>
</body>
</html>